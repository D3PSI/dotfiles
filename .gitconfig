[user]
    email = cedric@schwyter.io
    name = Cedric Schwyter
[credential]
    helper = store
[pull]
    rebase = true
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[commit]
    gpgsign = true
[init]
    defaultBranch = master
[push]
	autoSetupRemote = true
[rerere]
	enabled = 1
	autoupdate = true
[log]
    showSignature = true
[core]
    untrackedcache = true
    fsmonitor = true
[checkout]
    defaultRemote = origin
